@model HomePageViewModel

@{
    ViewData["Title"] = "Ana Sayfa";
}



<div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
    @*<div class="carousel-indicators">
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" aria-label="Slide 2" class=""></button>
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2" aria-label="Slide 3" class="active" aria-current="true"></button>
    </div>*@
    <div class="carousel-inner">

        @foreach (var item in Model.Sliders)
        {
            <div class="carousel-item @(item ==Model.Sliders.FirstOrDefault() ?"active":"") ">
               @* class="bd-placeholder-img" *@

                <img class="d-block w-100 "  height="100% " xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false" src="/Img/@item.Image" alt="@item.Image" />

                <div class="container">
                    <div class="carousel-caption text-end">
                        <h1>@item.Name</h1>
                        <p>@item.Description</p>
                        <p><a class="btn btn-lg btn-primary" href="/@item.Link">İncele</a></p>
                    </div>
                </div>
            </div>
        }

    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>


<!-- Marketing messaging and featurettes
================================================== -->
<!-- Wrap the rest of the page in another container to center all the content. -->

<div class="container marketing mt-5">

    <h2 class="text-center">Bizden Haberler</h2>
    <br/>
    <br/>
    <div class="row text-center ">
        @foreach (var item in Model.News)
        {
           
            <div class="col-lg-4">
              
                <img src="/Img/@item.Image" alt="" class="bd-placeholder-img rounded-circle" width="140" height="140" />
                <br/>
                <h2 class="fw-normal">@item.Name</h2>
               <br/>
                <p><a class="btn btn-secondary" href="/News/Detail/@item.Id">Detayını gör »</a></p>
            </div>

            
        }

    </div>
    <!-- START THE FEATURETTES -->
    <br/>
    <h2 class="text-center">İçerikler</h2>
    <hr class="featurette-divider">

    @foreach (var item in Model.Posts)
    {
        <div class="row featurette">
            <div class="col-md-7">
                <h2 class="featurette-heading fw-normal lh-1"> @item.Name </h2>
                <p class="lead">@item.Content</p>
            </div>
            <div class="col-md-5">

                <a href="/Posts/Detail/@item.Id">
                    <img src="/Img/@item.Image" alt="@item.Name" class="bd-placeholder-img bd-placeholder-img-lg featurette-image img-fluid mx-auto" width="400" height="400" />
                </a>
            </div>
        </div>

        <hr class="featurette-divider">
    }





    <!-- /END THE FEATURETTES -->

</div>
<!-- <main> kodlarını sildi çünkü _layout dosyasında RenderBody() üstünde var iki kere olmasın diye-->